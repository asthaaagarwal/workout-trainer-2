# Headers for GitHub Pages (via Cloudflare)
# Note: GitHub Pages doesn't natively support _headers file,
# but if you use Cloudflare or similar CDN, this will work

/index.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

/*.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

/version.json
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Cache static assets with hash in filename for a long time
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Cache images for a week
/*.png
  Cache-Control: public, max-age=604800

/*.jpg
  Cache-Control: public, max-age=604800

/*.jpeg
  Cache-Control: public, max-age=604800

/*.svg
  Cache-Control: public, max-age=604800

/manifest.json
  Cache-Control: no-cache, must-revalidate